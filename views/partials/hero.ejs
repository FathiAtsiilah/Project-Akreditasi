        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
    }

    .floating-elements {
        position: absolute;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .floating-element {
        position: absolute;
        opacity: 0.1;
        animation: float 6s ease-in-out infinite;
    }

    .floating-element:nth-child(1) {
        top: 10%;
        left: 80%;
        animation-delay: 0s;
    }

    .floating-element:nth-child(2) {
        top: 20%;
        left: 10%;
        animation-delay: 2s;
    }

    .floating-element:nth-child(3) {
        top: 70%;
        right: 15%;
        animation-delay: 4s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }
        33% {
            transform: translateY(-20px) rotate(120deg);
        }
        66% {
            transform: translateY(10px) rotate(240deg);
        }
    }

    .stats-container {
        background: var(--light-bg);
        border-radius: 16px;
        padding: 2rem;
        margin-top: 2rem;
    }

    .stat-item {
        text-align: center;
        padding: 1rem;

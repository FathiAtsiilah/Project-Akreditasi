<div class="container d-flex justify-content-center align-items-center" style="margin-top: 50px; min-height: 80vh">
    <div class="card p-4 shadow-lg" style="max-width: 420px; width: 100%">
        <div class="card-body">
            <!-- Header -->
            <div class="text-center mb-4">
                <a class="text-center" href="/">
                    <img src="/asset/UGGlobal.png" alt="Logo Gunadarma" style="height: 80px" />
                </a>
                <p class="text-muted small">Silakan atur ulang kata sandi Anda</p>
            </div>

            <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger"><%= error %></div>
            <% } %> <% if (typeof success !== 'undefined') { %>
            <div class="alert alert-success"><%= success %></div>
            <% } %>

            <!-- Form Reset Password -->
            <form action="/api/reset-password" method="POST">
                <!-- Token hidden (opsional, jika kirim via email link) -->
                <% if (typeof token !== 'undefined') { %>
                <input type="hidden" name="token" value="<%= token %>" />
                <% } %>

                <!-- New Password -->
                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">Password Baru</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="fas fa-lock"></i></span>
                        <input
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            placeholder="Masukkan password baru"
                            required
                        />
                    </div>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label fw-semibold">Konfirmasi Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="fas fa-lock"></i></span>
                        <input
                            type="password"
                            class="form-control"
                            id="confirmPassword"
                            name="confirmPassword"
                            placeholder="Ulangi password baru"
                            required
                        />
                    </div>
                </div>

                <!-- Button -->
                <button type="submit" class="btn btn-primary w-100 fw-semibold py-2 shadow-sm">
                    <i class="fas fa-key me-1"></i> Reset Password
                </button>
            </form>

            <!-- Back to login -->
            <div class="text-center mt-3">
                <a href="/login" class="text-decoration-none small text-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Kembali ke Login
                </a>
            </div>
        </div>
    </div>
</div>
